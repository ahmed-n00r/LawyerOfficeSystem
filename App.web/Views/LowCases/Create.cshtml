@model DBModels.AppModels.LowCase

@{
    ViewData["Title"] = "Create";
    var isRTL = CultureInfo.CurrentCulture.Name.StartsWith("ar");
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="d-flex align-items-center ps__rtl">
                        <p class="mb-0">@(string.Format(localizer["CreateNew"].Value, localizer["LowCases"].Value))</p>
                        <a asp-action="Index" type="button" class="btn btn-@AppConstants.buttonClass btn-sm @(isRTL ? "me-sm-auto" : "ms-auto")">@localizer["Back"]</a>
                    </div>
                </div>
                <div class="card-body">
                    <div>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Case" class="control-label"></label>
                                <input asp-for="Case" class="form-control" />
                                <span asp-validation-for="Case" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CaseDoc" class="control-label"></label>
                                <input asp-for="CaseDoc" class="form-control" />
                                <span asp-validation-for="CaseDoc" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input asp-for="StartDate" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            @* <div class="form-group">
                                <label asp-for="EndDate" class="control-label"></label>
                                <input asp-for="EndDate" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div> *@
                            <div class="form-group">
                                <label asp-for="ClaimantId" class="control-label"></label>
                                <select asp-for="ClaimantId" class="form-control" asp-items="ViewBag.ClaimantId"></select>
                            </div>
                            <div class="form-group">
                                <label asp-for="LoweyrId" class="control-label"></label>
                                <select asp-for="LoweyrId" class="form-control" asp-items="ViewBag.LoweyrId"></select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="@localizer["Save"]" class="btn btn-@AppConstants.buttonClass" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
